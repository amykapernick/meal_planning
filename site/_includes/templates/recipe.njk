{% set pagetitle = title %}
{% extends 'layouts/main.njk' %}



{% block content %}
<article class="content">
	<header>
		<h1>{{title}}</h1>
		{% if categories %}
		<ul class="tags">
			{% for tag in categories %}
			<li>
				<a>#{{tag}}</a>
			</li>
			{% endfor %}
		</ul>
		{% endif %}
	</header>
	{{contentsafe}}
</article>
{% endblock %}