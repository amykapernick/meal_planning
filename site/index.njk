---
title: Recipes
pagination:
  data: collections.recipes
  size: 15
  alias: recipes
---

{% set pagetitle = "Recipes" %}
{% set class = "home" %}
{% extends 'layouts/main.njk' %}

{% block content %}

<h1>Recipes</h1>

<ul class="feed">
	{% for recipe in recipes %}
		<li>
			<article class="recipe">
				<h2>
					<a href="{{recipe | slug}}">
						{{ recipe.data.title }}
					</a>
				</h2>
				{% if recipe.data.image %}
					<img src="/img/cms/{{recipe.data.image}}" />
				{% else %}
					<img src="/img/plceholder.png" />
				{% endif %}
				{% if recipe.data.categories %}
					<ul class="tags">
						{% for tag in recipe.data.categories %}
							<li>
								<a>#{{tag}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</article>
		</li>
	{% endfor %}
</ul>
{% endblock %}